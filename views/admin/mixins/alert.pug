mixin alert-success(time=5000)
    - if (messages.success)
        div(
            class="alert alert-success"
            show-alert 
            data-time="#{time}"
        )
            | #{messages.success}
            button(class="btn btn-danger btn-sm" close-alert) x

mixin alert-error(time=5000)
    - if (messages.error)
        div(
            class="alert alert-danger"
            show-alert 
            data-time="${time}"
        )
            | #{messages.error}
            button(class="btn btn-danger btn-sm" close-alert) x

