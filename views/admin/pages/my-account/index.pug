extends ../../layouts/default.pug

block main 
    h1(class="mb-4") Thông tin cá nhân 
    
    if(user.avtar)
        img(
            src=user.avatar 
            width="150px"
            class="mb-3"
        )
    else
        img(
            src="http://res.cloudinary.com/djgldpj0g/image/upload/v1743754178/hgpadvftbi3pthrvdzan.png"
            width="150px"
            class="mb-3"
        )    
    
    if(user.fullName)
        p Họ tên: <b>#{user.fullName}</b>

    if(user.email)
        p Email: <b>#{user.email}</b>

    if(user.phone)
        p Số điện thoại: <b>#{user.phone}</b>

    p 
        span Trạng thái 
        span 
            <b>#{user.status === "active" ? "Hoạt động": "Dừng hoạt động"}</b>
    
    if (role.title)
        p Phân quyền: <b>#{role.title}</b>

    a(
        href=`/${prefixAdmin}/my-account/edit`
        lass="btn btn-primary"
    ) Chỉnh sửa thông tin