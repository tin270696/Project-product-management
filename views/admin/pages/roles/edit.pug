extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    if(role.permissions.includes("roles_edit"))
        h1(class="mb-4") Chỉnh sửa nhóm quyền 
        +alert-success(3000)
        +alert-error(3000)

        form(
            action=`/${prefixAdmin}/roles/edit/${record.id}?_method=PATCH`
            method="POST"
        )
            div(class="form-group")
                label(for="title") Tiêu đề
                input(
                    type="text"
                    id="title"
                    name="title"
                    class="form-control"
                    value=record.title
                    required
                )
            
            div(class="form-group")
                label(for="description") Mô tả
                input(
                    type="text"
                    id="description"
                    name="description"
                    class="form-control"
                    value=record.description
                )
            
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật
    else 
        h1(class="mb-4") Không có quyền truy cập